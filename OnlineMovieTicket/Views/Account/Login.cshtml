@model OnlineMovieTicket.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <body class="wrapper">
        <div class="login-box-outer">
            <div>
                <h1>Sign in</h1>
                <form>
                    <div class="input-wrap">
                        @Html.Label("Email")
                        @Html.TextBoxFor(Model => Model.Email, htmlAttributes: new { @placeholder = "Email", @class="login-box-outer-input" })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="input-wrap-pass">
                        @Html.Label("Password")
                        </div>
                    <div class="input-wrap-password-box">
                        @Html.PasswordFor(Model => Model.Password, htmlAttributes: new { @placeholder = "Password", @id = "password_id",@class="hidden-pass"})
                       <i toggle="#password-field" class="fa fa-fw fa-eye field_icon toggle-password" style="padding:0px 3px 0px 3px"></i><br />
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="input-wrap-red">
                        @TempData["LoginErrorMessage"]
                    </div>
                    <div class="input-wrap">
                        <button type="submit">Login</button>
                    </div>

                    <div class="input-wrap">
                        <b>Don't have an account?</b>
                        @Html.ActionLink("Signup", "Signup", "Account", null, new { @cass = "signup-link" })
                    </div>

                </form>
            </div>
        </div>
    </body>
}

<script>
    $(document).on('click', '.toggle-password', function () {

        $(this).toggleClass("fa-eye fa-eye-slash");

        var input = $("#password_id");
        input.attr('type') === 'password' ? input.attr('type', 'text') : input.attr('type', 'password')
    });
</script>