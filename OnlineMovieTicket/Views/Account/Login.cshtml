@model OnlineMovieTicket.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <body class="wrapper">
        <div class="login-box-outer">
            <div>
                <h1>Sign in</h1>
                <form>
                    <div class="input-wrap">
                        @Html.Label("Email")
                        @Html.TextBoxFor(Model => Model.Email, htmlAttributes: new { @placeholder = "Email" })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="input-wrap">
                        @Html.Label("Password")
                        @Html.PasswordFor(Model => Model.Password, htmlAttributes: new { @placeholder = "Password" })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="input-wrap-red">
                        @TempData["LoginErrorMessage"]
                    </div>
                    <div class="input-wrap">
                        <button type="submit">Login</button>
                    </div>

                    <div class="input-wrap">
                        <b>Don't have an account?</b>
                        @Html.ActionLink("Signup", "Signup", "Account", null, new { @cass = "signup-link" })
                    </div>

                </form>
            </div>
        </div>
    </body>
}

