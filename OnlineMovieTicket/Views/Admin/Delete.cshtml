@model OnlineMovieTicket.Entity.Movie


@{
    ViewBag.Title = "Create";
     Layout = "~/Views/Shared/_LayoutSignout.cshtml";
    if (Session["UserId"] == null)
    {
        Response.Redirect("~/Account/Login");
    }
}

@using (Html.BeginForm("Delete", "Movie", FormMethod.Post))
{
    <table>
        <tr>
            <td>
                Movie Name :
            </td>
            <td>
                @Html.TextBoxFor(Model => Model.MovieName)
            </td>
        </tr>
        <tr>
            <td>
                Movie Id :
            </td>
            <td>
                @Html.TextBoxFor(Model => Model.MovieId)
            </td>
        </tr>
        <tr>
            <td>
                Show Time:
            </td>
            <td>
                @Html.TextBoxFor(Model => Model.ShowTime)
            </td>
        </tr>
        <tr>
            <td>
                Price :
            </td>
            <td>
                @Html.TextBoxFor(Model => Model.Price)
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit" value="Create" />
            </td>
            <td>
                <a href="~/Index">Back</a>
            </td>
        </tr>
    </table>
}