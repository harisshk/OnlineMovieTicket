@model OnlineMovieTicket.Entity.Movie


@{
    ViewBag.Title = "Create";
     Layout = "~/Views/Shared/_Layout.cshtml";
  
}

@using (Html.BeginForm("DeleteMovie", "Movie", FormMethod.Post))
{
    <table>
        <tr>
            <td>
                Movie Name :
            </td>
            <td>
                @Html.TextBoxFor(Model => Model.MovieName)
            </td>
        </tr>
        <tr>
            <td>
                Movie Id :
            </td>
            <td>
                @Html.TextBoxFor(Model => Model.MovieId)
            </td>
        </tr>
        <tr>
            <td>
                Show Time Morning:
            </td>
            <td>
                @Html.TextBoxFor(Model => Model.ShowTimeMorning)
            </td>
            <td style="color:red">
                @Html.ValidationMessageFor(model => model.ShowTimeMorning)
            </td>
        </tr>
        <tr>
            <td>
                Show Time Afternoon:
            </td>
            <td>
                @Html.TextBoxFor(Model => Model.ShowTimeAfternoon)
            </td>
            <td style="color:red">
                @Html.ValidationMessageFor(model => model.ShowTimeAfternoon)
            </td>
        <tr>
            <td>
                Show Time Evening:
            </td>
            <td>
                @Html.TextBoxFor(Model => Model.ShowTimeEvening)
            </td>
            <td style="color:red">
                @Html.ValidationMessageFor(model => model.ShowTimeEvening)
            </td>
        </tr>

        <tr>
            <td>
                Price :
            </td>
            <td>
                @Html.TextBoxFor(Model => Model.Price)
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit" value="Delete" />
            </td>
            <td>
                <a href="~/Index">Back</a>
            </td>
        </tr>
    </table>
}